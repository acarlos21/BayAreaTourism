<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tony.android.bayareatourism">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Bay Area Tourism Guidance"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <meta-data android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/map_key" />


        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SanFrancisco.SanFranciscoActivity"
            android:label="San Francisco" />
        <activity
            android:name=".Oakland.OaklandActivity"
            android:label="Oakland" />
        <activity
            android:name=".Berkeley.BerkeleyActivity"
            android:label="Berkeley" />
        <activity
            android:name=".SanFrancisco.SanFranciscoTransportation"
            android:label="San Francisco Transportation" />
        <activity
            android:name=".SanFrancisco.SanFranciscoAttractions"
            android:label="San Francisco Attractions" />
        <activity
            android:name=".SanFrancisco.SanFranciscoHotels"
            android:label="San Francisco Hotels" />
        <activity
            android:name=".SanFrancisco.SanFranciscoRestaurants"
            android:label="San Francisco Restaurants" />
        <activity
            android:name=".SanFrancisco.SanFranciscoEvents"
            android:label="San Francisco Events" />
        <activity
            android:name=".SanFrancisco.SanFranciscoBus"
            android:label="San Francisco Muni" />
        <activity
            android:name=".SanFrancisco.SanFranciscoTrain"
            android:label="San Francisco Bart" />
        <activity
            android:name=".SanFrancisco.SanFranciscoCar"
            android:label="San Francisco Taxi" />
        <activity android:name=".Berkeley.BerkeleyRestaurants" />
        <activity android:name=".Berkeley.BerkeleyHotels" />
        <activity android:name=".Berkeley.BerkeleyAttractions" />
        <activity android:name=".Berkeley.BerkeleyTransportation" />
        <activity android:name=".Berkeley.BerkeleyEvents" />
        <activity android:name=".Berkeley.BerkeleyBus" />
        <activity android:name=".Berkeley.BerkeleyTrain" />
        <activity android:name=".Oakland.OaklandHotels" />
        <activity android:name=".Oakland.OaklandRestaurants" />
        <activity android:name=".Oakland.OaklandAttractions" />
        <activity android:name=".Oakland.OaklandEvents" />
        <activity android:name=".Oakland.OaklandTransportation" />
        <activity android:name=".Oakland.OaklandTrain" />
        <activity android:name=".Oakland.OaklandBus" />
        <!--
             The API key for Google Maps-based APIs is defined as a string resource.
             (See the file "res/values/google_maps_api.xml").
             Note that the API key is linked to the encryption key used to sign the APK.
             You need a different API key for each encryption key, including the release key that is used to
             sign the APK for publishing.
             You can define the keys for the debug and release targets in src/debug/ and src/release/. 
        -->

        <activity android:name=".SanFrancisco.SanFranciscoMap"></activity>
    </application>

</manifest>